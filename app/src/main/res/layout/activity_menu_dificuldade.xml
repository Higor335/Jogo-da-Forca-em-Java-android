<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:pointerIcon="none"
    tools:context=".MenuDificuldade">

    <TextView
        android:id="@+id/tvTI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/coda"
        android:gravity="center"
        android:text="@string/dificuldade"
        android:textColor="#2D6306"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btFacil"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#038A03"
        android:fontFamily="@font/coda"
        android:paddingLeft="60dp"
        android:paddingRight="100dp"
        android:tag="facil"
        android:text="@string/facil"
        android:textSize="20sp"
        app:icon="@drawable/iconfacil" />

    <Button
        android:id="@+id/btMedio"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#C1C100"
        android:fontFamily="@font/coda"
        android:paddingLeft="60dp"
        android:paddingRight="100dp"
        android:tag="medio"
        android:text="@string/medio"
        android:textSize="20sp"
        app:icon="@drawable/iconmedio" />

    <Button
        android:id="@+id/btDificil"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#9A0303"
        android:fontFamily="@font/coda"
        android:paddingLeft="60dp"
        android:paddingRight="100dp"
        android:tag="dificil"
        android:text="@string/dificil"
        android:textSize="20sp"
        app:icon="@drawable/icondificil" />

    <Button
        android:id="@+id/btPers"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#A60383"
        android:fontFamily="@font/coda"
        android:text="@string/personalizado"
        android:tag="personalizado"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvPalavra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coda"
            android:paddingLeft="10dp"
            android:text="Insira suas palavras"
            android:textColor="@color/purple_500"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvPalavra"
            android:background="@android:color/black" />

    </RelativeLayout>



</LinearLayout>